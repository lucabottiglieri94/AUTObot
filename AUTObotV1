  <div id="inputArea">
    <input id="input" placeholder="Scrivi una domanda">
    <button id="send">Invia</button>
  </div>
</div>

<script>
const orb = document.getElementById("orb");
const chat = document.getElementById("chatbox");
const messages = document.getElementById("messages");
const input = document.getElementById("input");
const send = document.getElementById("send");

orb.onclick = () => {
  chat.style.display = chat.style.display === "flex" ? "none" : "flex";
};

function add(text, cls){
  const d = document.createElement("div");
  d.className = "msg " + cls;
  d.textContent = text;
  messages.appendChild(d);
  messages.scrollTop = messages.scrollHeight;
}

add("Sono il tuo agente AI. Dimmi cosa vuoi vendere o confrontare.","ai");

send.onclick = () => {
  const q = input.value.trim();
  if(!q) return;
  add(q,"user");
  input.value="";
  setTimeout(()=>add(ai(q),"ai"),350);
};

function ai(q){
  q = q.toLowerCase();
  if(q.includes("fiat")) return "Fiat: costi bassi, alta rivendibilità, ideale per uso quotidiano.";
  if(q.includes("alfa")) return "Alfa Romeo: guida sportiva, design emotivo, cliente passionale.";
  if(q.includes("mg")) return "MG: ottimo rapporto qualità prezzo, forte su elettrico.";
  if(q.includes("aixam")) return "Aixam: mobilità urbana senza patente, target molto specifico.";
  if(q.includes("confronto")) return "Dimmi i modelli e preparo il confronto per il cliente.";
  return "Posso aiutarti su modelli, obiezioni, trattativa e chiusura vendita.";
}
</script>

